    "@yarnpkg/sdks": "3.0.0-rc.40",
    "jest": "29.5.0",
    "prettier": "2.8.4",
    "typescript": "5.0.2"
  },
  "resolutions": {
    "chalk": "4.1.2"
  },
  "packageManager": "yarn@3.5.0"
