  "engines": {
    "node": ">=18.12"
  },
  "type": "module",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "format": "prettier --cache --write ./packages/*/src/**/*.ts",
    "compile": "tsc --build",
    "compile:watch": "yarn run compile --watch",
    "test": "yarn node --no-warnings --experimental-vm-modules $(yarn bin jest) --no-cache",
    "test:watch": "yarn run test --watchAll"
  },
  "devDependencies": {
    "@yarnpkg/sdks": "3.0.0-rc.39",
    "jest": "29.4.2",
    "prettier": "2.8.4",
    "typescript": "4.9.5"
  },
  "resolutions": {
    "chalk": "4.1.2"
  },
  "packageManager": "yarn@3.4.1"
}
