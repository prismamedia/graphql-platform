    "typescript": "5.8.3"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@prismamedia/memoize": "^6.1.0",
    "indefinite": "^2.5.1",
    "remeda": "^2.21.8"
  },
  "peerDependencies": {
    "graphql": "^16.11.0"
  }
